<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/flamingskull"
        android:scaleType="centerCrop"
        android:id="@+id/flamingskull"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/youaskedforthis2"
        android:layout_marginTop="34dp"
        android:layout_alignTop="@+id/flamingskull"
        android:layout_alignRight="@+id/flamingskull"
        android:layout_alignEnd="@+id/flamingskull"
        android:layout_marginRight="68dp"
        android:layout_marginEnd="68dp"
        android:id="@+id/imageView" />

    <ImageView
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/getoffyourphone"
        android:layout_marginBottom="414dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>